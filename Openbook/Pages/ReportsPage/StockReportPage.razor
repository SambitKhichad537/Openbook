@page "/app/reports/stock-summary"@inject IInventoryReport report@inject ICompany _company;@inject IProduct _product@inject ICategories _category@using System.Data;@inject IJSRuntime JSRuntime@inject NavigationManager navigation<PageTitle>Stock-Summary | Openbook</PageTitle><div class="content">												<!-- /product list -->						<div class="card">							<div class="">			<!-- /Filter -->				<div class="">					<div class="card-body pb-0">					<div class="row">						<div class="col-lg-3 col-sm-6 col-12">							<div class="form-group">								Category								<RadzenDropDown Style="width:100%;" @bind-Value="intGroupId" Placeholder="All" AllowFiltering="true" Data="@(listGroup)" TextProperty="CategoryName" ValueProperty="CategoriesId" />							</div>						</div>						<div class="col-lg-3 col-sm-6 col-12">							<div class="form-group">								Product								<RadzenDropDown Style="width:100%;" @bind-Value="intProductId" Placeholder="All" AllowFiltering="true" Data="@(listProduct)" TextProperty="ProductName" ValueProperty="ProductId" />							</div>						</div>						<div class="col-lg-3 col-sm-6 col-12">							<div class="btn-group" style="margin-top:20px;">								<a class="btn btn-default btn-with-tooltip" onclick="printDiv('PrintDiv')">									<i class="fa fa-print"></i>									<span class="caret"></span>								</a>							</div>							<div class="btn-group" style="margin-top:20px;">								<a @onclick="()=>LoadData()" class="btn btn-default btn-with-tooltip">									<i class="fa fa-search"></i>									<span class="caret"></span>								</a>							</div>						</div>					</div>				</div>			</div>			<!-- /Filter -->			<div id="PrintDiv">								<div class="table-responsive">									<br/>									<hr/>				<table style="width: 100%;line-height: inherit;text-align: left;">					<tbody>						<tr>							<td style="padding:5px;vertical-align:top;text-align:center;padding-bottom:20px">								<font style="vertical-align: inherit;"><font style="vertical-align: inherit;font-size: 22px;color:#000;font-weight: 600;"> @company.CompanyName </font></font><br>								<font style="vertical-align: inherit;"><font style="vertical-align: inherit;font-size: 17px;color:#000;font-weight: 600;">@company.Address</font></font><br>								<font style="vertical-align: inherit;"><font style="vertical-align: inherit;font-size: 15px;color:#000;font-weight: 600;">@company.PhoneNo</font></font><br>								<font style="vertical-align: inherit;"><font style="vertical-align: inherit;font-size: 16px;color:#000;font-weight: 600;"> Stock Report</font></font><br>							</td>						</tr>					</tbody>				</table><br/>				@if(listModel == null)				{				}				else				{						<table class="table">							<thead>							<tr style="background: #F3F2F7;">									<th>S.No.</th>									<th>Product Code</th>									<th>Product Name</th>									<th>Unit</th>									<th>Pur Rate</th>									<th>Pur Qty</th>									<th>Balance</th>									<th style="">Sales Rate</th>									<th>Sales Qty</th>									<th>Balance</th>									<th>Stock Qty</th>									<th>Stock Amount</th>								</tr>								</thead>								@{									int sno = 0;								}								@foreach (var item in listModel)								{									<tr>										<td>											@{												sno++;											}											@sno										</td>										<td>@item.ProductCode</td>										<td>@item.ProductName</td>										<td>@item.UnitName</td>										<td>@PublicVariables._Symbol @item.Rate</td>										<td>@item.PurQty</td>										<td>@PublicVariables._Symbol @item.PurchaseStockBal</td>										<td>@PublicVariables._Symbol@item.SalesRate</td>										<td>@item.SalesQty</td>										<td>@PublicVariables._Symbol@item.SalesStockBalance</td>										<td>@item.Stock</td>										<td>@PublicVariables._Symbol @item.Stockvalue</td>									</tr>								}							<tfoot>								<tr style="color:red;">									<td>Total</td>									<td></td>									<td></td>									<td></td>									<td></td>									<td></td>									<td></td>									<td></td>									<td></td>									<td></td>									<td>@listModel.Sum(i => i.Stock)</td>									<td>@PublicVariables._Symbol @listModel.Sum(i => i.Stockvalue)</td>								</tr>							</tfoot>						</table>				}								</div>								</div>							</div>						</div>						<!-- /product list -->					</div>@code {	DateTime dtFromDate = DateTime.UtcNow.AddDays(-1);	DateTime dtToDate = DateTime.UtcNow;	IList<InventoryViewFinal> listModel;	Company company = new Company();	IList<ProductView> listProduct;	IList<CategoriesView> listGroup;	int intProductId = 0;	int intGroupId = 0;	protected override async Task OnInitializedAsync()	{			company = await _company.GetById();			listProduct = await _product.GetAll();			listGroup = await _category.GetAll();			intProductId = 0;			intGroupId = 0;			await LoadData();		StateHasChanged();	}	private async Task LoadData()	{		listModel = report.StockReport(intGroupId, intProductId);		StateHasChanged();	}}