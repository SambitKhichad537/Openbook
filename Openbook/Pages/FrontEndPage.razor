         <script>
            const usdExchangeRate = 0.012;
            var originalPriceInINR = [];

             
            document.addEventListener('DOMContentLoaded', function () {
                var priceElement = document.querySelectorAll('.price');
                priceElement.forEach((item) => {
                    console.log(item.innerText);
                    originalPriceInINR.push(item.innerText);
                })
            });

            function updatePrices() {
                var currencySelector = document.getElementById('currency');
                var currencySymbol = document.querySelectorAll('.currency-symbol');
                var priceElement = document.querySelectorAll('.price');

                var selectedCurrency = currencySelector.value;
                
                if (selectedCurrency === 'INR') {
                    currencySymbol.forEach((item) => {
                        item.innerText = '₹';
                    })
                    let i = 0;
                    priceElement.forEach((item) => {
                        item.innerText = Number(originalPriceInINR[i]).toFixed(2);
                        i++;
                    })
                } else if (selectedCurrency === 'USD') {
                    currencySymbol.forEach((item) => {
                        item.innerText = '$';
                    })
                    let i = 0;
                    priceElement.forEach((item) => {
                        item.innerText = ((originalPriceInINR[i] * usdExchangeRate).toFixed(2));
                        i++;
                    })
                }
            }
        </script>
