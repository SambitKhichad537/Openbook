            <label for="currency">Select Currency:</label>
            <select id="currency" onchange="updatePrices()" style="margin:0.5rem; padding:0.5rem 0.6rem; border-radius:10px;">
                <option value="INR">INR</option>
                <option value="USD">USD</option>
            </select>

